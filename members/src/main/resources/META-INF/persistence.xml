<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence>

    <persistence-unit name="skillbase-members">
        <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <class>com.headspin.skillbase.members.domain.Member</class>
        <class>com.headspin.skillbase.members.domain.MemberSkill</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url"
                value="jdbc:postgresql://MACHINE_IP>:5432/docker" />
            <property name="jakarta.persistence.jdbc.user" value="docker" />
            <property name="jakarta.persistence.jdbc.password" value="docker" />
            <property name="jakarta.persistence.schema-generation.database.action"
                value="drop-and-create" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
        </properties>
    </persistence-unit>

</persistence>
