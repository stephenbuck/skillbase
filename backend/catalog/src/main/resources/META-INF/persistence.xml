<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence>

    <persistence-unit name="skillbase_catalog">
        <jta-data-source>java:jboss/datasources/SkillbaseDS</jta-data-source>
        <class>com.headspin.skillbase.catalog.domain.CatalogCategory</class>
        <class>com.headspin.skillbase.catalog.domain.CatalogSkill</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://172.17.0.1:5432/skillbase"/>
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="postgres" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect"/>
        </properties>
    </persistence-unit>

</persistence>
