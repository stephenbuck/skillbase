{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://skillbase.com/schema/CatalogSkill.schema.json",
  "title": "Catalog Skill",
  "description": "A skill in the Skillbase catalog service",
  "type": "object",
  "properties": {
    "skill_id": {
      "description": "The unique id of the skill",
      "type": "string",
      "format": "uuid"
    },
    "title": {
      "description": "The title of the skill",
      "type": "string"
    },
    "note": {
      "description": "The note of the skill",
      "type": "string"
    },
    "image_id": {
      "description": "The id of the image",
      "type": "string"
    },
    "created_at": {
      "description": "The create timestamp",
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "description": "The update timestamp",
      "type": "string",
      "format": "date-time"
    },
    "version": {
      "description": "The update version",
      "type": "string",
      "format": "integer"
    }
  },
  "required": [
    "skill_id",
    "title",
    "note",
    "created_at",
    "updated_at"
  ]
}