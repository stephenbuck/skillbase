<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence>

    <persistence-unit name="skillbase-certify">
        <jta-data-source>java:jboss/datasources/ExampleDS</jta-data-source>
        <class>com.headspin.skillbase.certify.domain.CertifyCert</class>
        <class>com.headspin.skillbase.certify.domain.CertifyDocument</class>
        <class>com.headspin.skillbase.certify.domain.CertifyModel</class>
        <class>com.headspin.skillbase.certify.domain.CertifyProcess</class>
        <class>com.headspin.skillbase.certify.domain.CertifyTask</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://localhost:15432/skillbase" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="postgres" />
        </properties>
    </persistence-unit>

</persistence>
