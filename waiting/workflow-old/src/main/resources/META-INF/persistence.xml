<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<persistence>

    <persistence-unit name="groupbase_workflow">
        <jta-data-source>java:jboss/datasources/SkillbaseDS</jta-data-source>
        <class>com.headspin.groupbase.workflow.domain.WorkflowCert</class>
        <class>com.headspin.groupbase.workflow.domain.WorkflowDocument</class>
        <class>com.headspin.groupbase.workflow.domain.WorkflowModel</class>
        <class>com.headspin.groupbase.workflow.domain.WorkflowProcess</class>
        <class>com.headspin.groupbase.workflow.domain.WorkflowTask</class>
        <properties>
            <property name="jakarta.persistence.jdbc.driver" value="org.postgresql.Driver" />
            <property name="jakarta.persistence.jdbc.url" value="jdbc:postgresql://172.17.0.1:5432/groupbase" />
            <property name="jakarta.persistence.jdbc.user" value="postgres" />
            <property name="jakarta.persistence.jdbc.password" value="postgres" />
        </properties>
    </persistence-unit>

</persistence>
